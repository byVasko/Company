<h1>All news</h1>
<% @article.each do |article| %>
  <div class="alert alert-light">
    <h3><%= article.title %></h3>
    <p><%= article.body.html_safe %></p>
    <%= link_to "Read more", article_path(article), :class => 'btn btn-outline-primary' %>
  </div>
  <%= raw article.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-primary' }.join(' ') %>
  <hr>
<% end %>